@page "{moduloConfig?}"
@model ContosoUniversity.Pages.Configuraciones.IndexModel

        @{
        ViewData["Title"] = "Configuracion";
        }
        
        <h1><i class="fas fa-cog"></i> Configuracion @Model.moduloConfig </h1>
        
        <p>
            <a asp-page="Create"><i class="fas fa-plus-circle"></i> Nuevo</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Configuracion[0].Codigo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Configuracion[0].Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Configuracion[0].Modulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Configuracion[0].Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Configuracion[0].Valor2)
                    </th>
                    <!--
                    <th>
                        @Html.DisplayNameFor(model => model.Configuracion[0].DesdeFecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Configuracion[0].HastaFecha)
                    </th> -->
                    <th>
                        @Html.DisplayNameFor(model => model.Configuracion[0].Activo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Configuracion) {
                
                 string filaSeleccionada = "";
                 if (item.ID == Model.IDItemSeleccionado){filaSeleccionada = "table-success";}
                
                <tr class="@filaSeleccionada">
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor2)
                    </td>
                    <!--
                    <td>
                        @Html.DisplayFor(modelItem => item.DesdeFecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HastaFecha)
                    </td> 
                    -->
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>
                    <td>
                        <a asp-page="./Index" asp-route-id="@item.ID"><i class="far fa-hand-pointer"></i></a> |
                        <a asp-page="./Edit" asp-route-id="@item.ID"><i class="fas fa-pen"></i></a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
