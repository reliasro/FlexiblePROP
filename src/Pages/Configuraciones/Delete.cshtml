        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Configuracion.Activo)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Configuracion.ID" />
        <input type="submit" value="Borrar" class="btn btn-danger" asp-route-UrlOrigen="@ViewData["Origen"]" /> |
        <a href="@ViewData["Origen"]"><i class="fas fa-arrow-circle-left"></i> Regresar</a>
    </form>
</div>
