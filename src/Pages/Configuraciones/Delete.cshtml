}

<h1><i class="fas fa-trash-alt"></i></h1>

<p>Estas seguro de borrar este registro?</p>
<p>@Model.UrlOrigen</p>
<div>
    <h4>Configuracion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Configuracion.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Configuracion.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Configuracion.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Configuracion.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Configuracion.Modulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Configuracion.Modulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Configuracion.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Configuracion.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Configuracion.Valor2)
        </dt>
        <dd class="col-sm-10">
