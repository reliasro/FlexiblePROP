@page
@model ContosoUniversity.Pages.Prestamos.CreateModel

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Prestamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prestamo.CodigoPrestamo" class="control-label"></label>
                <input asp-for="Prestamo.CodigoPrestamo" class="form-control" />
                <span asp-validation-for="Prestamo.CodigoPrestamo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.Beneficiario" class="control-label"></label>
                <input asp-for="Prestamo.Beneficiario" class="form-control" />
                <span asp-validation-for="Prestamo.Beneficiario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.ValorPrestamo" class="control-label"></label>
                <input asp-for="Prestamo.ValorPrestamo" class="form-control" />
                <span asp-validation-for="Prestamo.ValorPrestamo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.Emisor" class="control-label"></label>
                <input asp-for="Prestamo.Emisor" class="form-control" />
                <span asp-validation-for="Prestamo.Emisor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.FechaEmision" class="control-label"></label>
                <input asp-for="Prestamo.FechaEmision" class="form-control" />
                <span asp-validation-for="Prestamo.FechaEmision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.Tasa" class="control-label"></label>
                <input asp-for="Prestamo.Tasa" class="form-control" />
                <span asp-validation-for="Prestamo.Tasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.CantidadCuotas" class="control-label"></label>
                <input asp-for="Prestamo.CantidadCuotas" class="form-control" />
                <span asp-validation-for="Prestamo.CantidadCuotas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.ValorCuotas" class="control-label"></label>
                <input asp-for="Prestamo.ValorCuotas" class="form-control" />
                <span asp-validation-for="Prestamo.ValorCuotas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.BalanceActual" class="control-label"></label>
                <input asp-for="Prestamo.BalanceActual" class="form-control" />
                <span asp-validation-for="Prestamo.BalanceActual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prestamo.Observaciones" class="control-label"></label>
                <textarea asp-for="Prestamo.Observaciones" class="form-control"></textarea>
                <span asp-validation-for="Prestamo.Observaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
