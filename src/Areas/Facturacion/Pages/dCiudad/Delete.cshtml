@page
@model ContosoUniversity.Areas.Facturacion.Pages.dCiudad.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<h1><i class="fas fa-trash-alt"></i></h1>

<p>Estas seguro de borrar este registro?</p>
<div>
    <h4>Ciudad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ciudad.Pais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ciudad.Pais.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ciudad.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ciudad.Descripcion)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Ciudad.ID" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index"><i class="fas fa-arrow-circle-left"></i> Regresar</a>
    </form>
</div>
