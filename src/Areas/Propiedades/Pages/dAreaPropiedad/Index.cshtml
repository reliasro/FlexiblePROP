@page
@model ContosoUniversity.Areas.Propiedades.Pages.dAreaPropiedad.IndexModel

@{
ViewData["Title"] = "Area Propiedad";
}
        
<h1><i class="fas fa-bullseye"></i> Area Propiedad </h1>
     
<p>
    <a asp-page="Create"> Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AreaPropiedad[0].UnidadEspacio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AreaPropiedad[0].Propiedad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AreaPropiedad[0].Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AreaPropiedad[0].CantidadEspacio)
                    </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AreaPropiedad) {
                
            string filaSeleccionada = "";
            if (item.ID == Model.IDItemSeleccionado){filaSeleccionada = "table-success";}
                
        <tr class="@filaSeleccionada">
                    <td>
                        @Html.DisplayFor(modelItem => item.UnidadEspacio.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Propiedad.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadEspacio)
                    </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID"><i class="far fa-hand-pointer"></i></a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID"><i class="fas fa-pen"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i></a>
                </td>
        </tr>
        }
    </tbody>
</table>
