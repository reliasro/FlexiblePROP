@page
@model ContosoUniversity.Areas.Propiedades.Pages.dAreaPropiedad.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1><i class="fas fa-pen"></i> Editar</h1>

<h4>Area Propiedad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AreaPropiedad.ID" />
            <div class="form-group">
                <label asp-for="AreaPropiedad.UnidadID" class="control-label"></label>
                <select asp-for="AreaPropiedad.UnidadID" class="form-control" asp-items="ViewBag.UnidadID"></select>
                <span asp-validation-for="AreaPropiedad.UnidadID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaPropiedad.PropiedadID" class="control-label"></label>
                <select asp-for="AreaPropiedad.PropiedadID" class="form-control" asp-items="ViewBag.PropiedadID"></select>
                <span asp-validation-for="AreaPropiedad.PropiedadID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaPropiedad.Descripcion" class="control-label"></label>
                <input asp-for="AreaPropiedad.Descripcion" class="form-control" />
                <span asp-validation-for="AreaPropiedad.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaPropiedad.CantidadEspacio" class="control-label"></label>
                <input asp-for="AreaPropiedad.CantidadEspacio" class="form-control" />
                <span asp-validation-for="AreaPropiedad.CantidadEspacio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index"><i class="fas fa-arrow-circle-left"></i> Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
