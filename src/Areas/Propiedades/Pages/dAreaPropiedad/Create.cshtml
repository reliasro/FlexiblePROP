@page
@model ContosoUniversity.Areas.Propiedades.Pages.dAreaPropiedad.CreateModel

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Area Propiedad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AreaPropiedad.PropiedadID" class="control-label"></label>
                <select asp-for="AreaPropiedad.PropiedadID" class="form-control" asp-items="ViewBag.PropiedadID">
                    <option value="">Seleccionar... </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AreaPropiedad.UnidadID" class="control-label"></label>
                <select asp-for="AreaPropiedad.UnidadID" class="form-control" asp-items="ViewBag.UnidadID">
                    <option value="">Seleccionar...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AreaPropiedad.Descripcion" class="control-label"></label>
                <input asp-for="AreaPropiedad.Descripcion" class="form-control" />
                <span asp-validation-for="AreaPropiedad.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaPropiedad.CantidadEspacio" class="control-label"></label>
                <input asp-for="AreaPropiedad.CantidadEspacio" class="form-control" />
                <span asp-validation-for="AreaPropiedad.CantidadEspacio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
