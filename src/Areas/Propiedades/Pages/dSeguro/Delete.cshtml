@page
@model ContosoUniversity.Areas.Propiedades.Pages.dSeguro.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<h1><i class="fas fa-trash-alt"></i></h1>

<p>Estas seguro de borrar este registro?</p>
<div>
    <h4>Seguro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seguro.Propiedad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seguro.Propiedad.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seguro.TipoSeguro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seguro.TipoSeguro.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seguro.MonedaValorAsegurado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seguro.MonedaValorAsegurado.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seguro.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seguro.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seguro.VigenciaDesde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seguro.VigenciaDesde)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seguro.VigenciaHasta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seguro.VigenciaHasta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seguro.ValorAsegurado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seguro.ValorAsegurado)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Seguro.ID" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index"><i class="fas fa-arrow-circle-left"></i> Regresar</a>
    </form>
</div>
