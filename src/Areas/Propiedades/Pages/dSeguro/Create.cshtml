@page
@model ContosoUniversity.Areas.Propiedades.Pages.dSeguro.CreateModel

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Seguro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Seguro.PropiedadID" class="control-label"></label>
                <select asp-for="Seguro.PropiedadID" class ="form-control" asp-items="ViewBag.PropiedadID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Seguro.TipoSeguroID" class="control-label"></label>
                <select asp-for="Seguro.TipoSeguroID" class ="form-control" asp-items="ViewBag.TipoSeguroID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Seguro.MonedaID" class="control-label"></label>
                <select asp-for="Seguro.MonedaID" class ="form-control" asp-items="ViewBag.MonedaID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Seguro.Fecha" class="control-label"></label>
                <input asp-for="Seguro.Fecha" class="form-control" />
                <span asp-validation-for="Seguro.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seguro.VigenciaDesde" class="control-label"></label>
                <input asp-for="Seguro.VigenciaDesde" class="form-control" />
                <span asp-validation-for="Seguro.VigenciaDesde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seguro.VigenciaHasta" class="control-label"></label>
                <input asp-for="Seguro.VigenciaHasta" class="form-control" />
                <span asp-validation-for="Seguro.VigenciaHasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seguro.ValorAsegurado" class="control-label"></label>
                <input asp-for="Seguro.ValorAsegurado" class="form-control" />
                <span asp-validation-for="Seguro.ValorAsegurado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
