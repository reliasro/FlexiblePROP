@page
@model ContosoUniversity.Areas.Propiedades.Pages.dVendedor.IndexModel

        @{
        ViewData["Title"] = "Vendedor";
        }
        
        <h1><i class="far fa-address-book"></i> Vendedor </h1>
        
        <p>
            <a asp-page="Create"><i class="fas fa-plus-circle"></i> Nuevo</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].Codigo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].Apellidos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].Cedula)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].FechaNacimiento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].Direccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].Telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].Celular)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].Website)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].NombreEmpresa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vendedor[0].Inmobiliaria)
                            </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Vendedor) {
                
                 string filaSeleccionada = "";
                 if (item.ID == Model.IDItemSeleccionado){filaSeleccionada = "table-success";}
                
                <tr class="@filaSeleccionada">
                            <td>
                                @Html.DisplayFor(modelItem => item.Codigo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cedula)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaNacimiento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Celular)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Website)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreEmpresa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Inmobiliaria.Contacto)
                            </td>
                        <td>
                            <a asp-page="./Index" asp-route-id="@item.ID"><i class="far fa-hand-pointer"></i></a> |
                            <a asp-page="./Edit" asp-route-id="@item.ID"><i class="fas fa-pen"></i></a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i></a>
                        </td>
                </tr>
                }
            </tbody>
        </table>
