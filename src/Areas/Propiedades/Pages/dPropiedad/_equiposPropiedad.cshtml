@model ContosoUniversity.Models.Propiedad
@using System.Web
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Equipos[0].Propiedad)
            </th>
            <th>
                @Html.DisplayNameFor(t => t.Equipos[0].Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipos[0].Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipos[0].Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipos[0].Serie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipos[0].Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipos[0].NombreImagen)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Equipos)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Propiedad.FichaPropiedad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreImagen)
            </td>
            <td>
                <a asp-area="Propiedades" asp-page="/dEquipoPropiedad/Edit" asp-route-id="@item.ID" asp-route-RutaRetorno="@Context.Request.Path.Value?id=@Model.ID#contenido2" ><i class="fas fa-pen"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
