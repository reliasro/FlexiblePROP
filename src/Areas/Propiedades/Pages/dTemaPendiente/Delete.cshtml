        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TemaPendiente.Propiedad.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TemaPendiente.TipoContrato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TemaPendiente.TipoContrato.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TemaPendiente.Tema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TemaPendiente.Tema)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TemaPendiente.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TemaPendiente.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TemaPendiente.FechaReporte)
