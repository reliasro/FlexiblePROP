@page
@model ContosoUniversity.Areas.Propiedades.Pages.dTemaPendiente.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<h1><i class="fas fa-trash-alt"></i></h1>

<p>Estas seguro de borrar este registro?</p>
<div>
    <h4>Tema Pendiente</h4>
