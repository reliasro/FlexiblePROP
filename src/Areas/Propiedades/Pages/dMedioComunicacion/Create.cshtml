@page
@model ContosoUniversity.Areas.Propiedades.Pages.dMedioComunicacion.CreateModel

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Medio Comunicacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedioComunicacion.CompaniaID" class="control-label"></label>
                <select asp-for="MedioComunicacion.CompaniaID" class ="form-control" asp-items="ViewBag.CompaniaID"></select>
            </div>
            <div class="form-group">
                <label asp-for="MedioComunicacion.Descripcion" class="control-label"></label>
                <input asp-for="MedioComunicacion.Descripcion" class="form-control" />
                <span asp-validation-for="MedioComunicacion.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedioComunicacion.Valor" class="control-label"></label>
                <input asp-for="MedioComunicacion.Valor" class="form-control" />
                <span asp-validation-for="MedioComunicacion.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
